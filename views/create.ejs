<% 
let desc = "Post Submitted Successfully! Navigate to the home page to see it featured there!";
if(!locals.submitted){
    desc = "Have some cool knowledge about Science, Tech, or Nature? A burning opinion you need to share? Enter it here and share it with the world!";
}

%>


<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Blogtech</title>

        <%- include("./partials/static_includes.ejs") %>
    </head>

    <body>
        <!-- Header -->
        <%- include("./partials/header.ejs", {page: "Create"}) %>
        

        <!-- Main Content (Create Post Form) -->
        <form action="/create" method="POST" class="container my-5 font-domine">
            <div class="row">
                <h1 class="font-domine fw-bold">Create a Post</h1>
            </div>
            <div class="row">
                <h5 class="font-domine col-12 col-sm-10 col-md-8 col-lg-7 mb-5"><%= desc %></h5>
            </div>
            <div class="mb-3 row">
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" required="true" class="form-control py-2" id="title" name="title" placeholder="Put your title here!">
                </div>
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                    <label for="author" class="form-label">Author:</label>
                    <input type="text" required="true" class="form-control py-2" id="author" name="author" placeholder="What is your name?">
                </div> 
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                    <select required="true" name="category" id="category" class="custom-select w-100 py-3 mt-4">
                        <option value="">-- Choose a Category --</option>
                        <option value="science">Science</option>
                        <option value="tech">Tech</option>
                        <option value="nature">Nature</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                
            </div>
            <div class="mb-3 row">
                <div class="col-12  col-md-10 col-lg-8">
                    <label for="Content" class="form-label">Content:</label>
                    <textarea class="form-control py-2" name="content" rows="8" cols="50" id="content" placeholder="Write your post here!" required="true"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <button type="submit" class="btn btn-primary col-12 col-sm-9 col-md-6 col-lg-4 col-xl-3">Create Post</button>
            </div>
        </form>

        <!-- Footer -->
        <%- include("./partials/footer.ejs") %>
    </body>
</html>